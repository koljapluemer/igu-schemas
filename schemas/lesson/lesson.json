{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["id", "name", "templates"],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "templates": {
      "type": "array",
      "items": {
        "$ref": "../exerciseTemplate/exerciseTemplate.json"
      },
      "minItems": 1
    }
  },
  "allOf": [
    {
      "if": {
        "type": "object",
        "properties": {
          "templates": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "blockedBy": {
                  "type": "array"
                }
              }
            }
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "templates": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "blockedBy": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "allOf": [
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  ]
}
